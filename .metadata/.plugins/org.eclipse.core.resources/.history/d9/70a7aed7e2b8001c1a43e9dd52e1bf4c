import java.util.Comparator;

public class BruchVergleicher implements Comparator<Bruch>{

	@Override
	public int compare(Bruch bruch1, Bruch bruch2) {
		float value1 = Math.abs(bruch1.zaehler - bruch1.nenner);
		float value2 = Math.abs(bruch2.zaehler - bruch2.nenner);
		if(value1 < value2) {
			return -1;
		} 
		else if(value1 > value2) {
			return 1;
		}
		return 0;
	}
}
